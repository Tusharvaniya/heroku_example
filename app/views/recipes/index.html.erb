<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Tittle</th>
      <th scope="col">Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.tittle %></td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to 'Show', recipe, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-success' %>

<a href="#" class= "btn btn-warning" onclick="paintIt(event, '#990000')">Paint it red</a>
